<section class="section has-background-dark">
  <div class="container">
    <div class="columns is-centered">
      <div class="column">
        <h1 class="title is-2 has-text-centered has-text-white">Flickr API</h1>
        <div class="columns is-centered">
          <div class="column">
            <%= render 'form' %>
          </div>
        </div>

        <div class="columns is-multiline">
          <% @photos.each do |photo| %>
            <div class="column is-one-third">
              <img class="image is-fullwidth" src="<%= Flickr.url_q(photo) %>">
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</section>
